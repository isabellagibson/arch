#!/bin/bash

for display in $(xrandr -q | grep " connected" | cut -d ' ' -f1); do
    chosen_raw=$(printf "0 Unchanged\n1 1280x720\n1 1920x1080" | rofi -dmenu -p 'Select resolution for $display:')
    chosen_int=$(echo "$chosen" | cut -d ') ' -f1)
    new_res=$(echo "$chosen" | cut -d ' ' -f2)
    case "$chosen_int" in
        "0") break ;;
        *) xrandr --output $display --mode $new_res ;;
    esac
done